# CreationHub Environment Variables
# Copy this file to .env and fill in your values

# ==================== DATABASE ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=postgres

# ==================== SECURITY ====================
# JWT Secret - Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_GENERATE_64_CHAR_RANDOM_STRING

# Allowed CORS origins (comma-separated)
# Example: http://localhost:5173,https://dashboard.example.com
CORS_ORIGINS=http://localhost:5173,http://localhost:7777

# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=100

# ==================== TELEGRAM ====================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=

# ==================== SUPABASE (optional) ====================
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# ==================== SERVER ====================
# Server IP for external service access (backend uses SERVER_IP, frontend uses VITE_SERVER_IP)
SERVER_IP=192.168.1.220
VITE_SERVER_IP=192.168.1.220
