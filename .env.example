# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGEME_SECURE_PASSWORD_HERE
POSTGRES_DB=postgres

# JWT Authentication (CRITICAL: Generate a strong random secret)
# Example: openssl rand -base64 64
JWT_SECRET=CHANGEME_GENERATE_RANDOM_64_CHAR_SECRET

# Redis
REDIS_PASSWORD=CHANGEME_REDIS_PASSWORD

# Frontend (Supabase-compatible API)
VITE_SUPABASE_URL=/api/v1
# Generate with: node -e "console.log(require('jsonwebtoken').sign({role:'postgres',exp:Math.floor(Date.now()/1000)+999999999},'YOUR_JWT_SECRET'))"
VITE_SUPABASE_ANON_KEY=CHANGEME_GENERATE_WITH_JWT_SECRET

# 24-Hour Recovery Mode (Optional - for password migration)
# Remove after creating hashed admin account
RECOVERY_PASSWORD=TEMPORARY_REMOVE_AFTER_24H

# System API
PORT=9191
WG_CONFIG_DIR=/etc/wireguard
GLANCES_URL=http://host.docker.internal:61208/api/4

# AI Services
AI_DATA_PATH=./ai_data

# CORS Configuration (comma-separated)
CORS_ORIGINS=http://localhost:7777,http://192.168.1.220:7777

# Rate Limiting
RATE_LIMIT_RPM=200

# Monitoring
GRAFANA_PASSWORD=CHANGEME_GRAFANA_PASSWORD
